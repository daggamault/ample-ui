{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "always",
    "source.fixAll": "always",
    "source.removeUnusedImports": "always"
  },
  "files.exclude": {
    "**/node_modules": true,
    "dist": true
  }
}
